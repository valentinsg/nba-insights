---
import type { Team } from '../types/Team';

interface Props {
  division: string;
  teams: Team[];
}

const { division, teams } = Astro.props;
---

<div class="bg-gray-800 rounded-lg overflow-hidden">
  <div
    class="h-40 bg-cover bg-center relative"
    style={`background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), 
           url(${teams[0].courtImage})`}
  >
    <div class="absolute bottom-0 left-0 p-4">
      <h3 class="text-xl font-bold text-white">{division}</h3>
      <div class="mt-2 flex space-x-4 text-gray-300 text-sm">
        <span>Equipos: {teams.length}</span>
        <span>
          TÃ­tulos: {teams.reduce((sum, team) => sum + team.titles, 0)}
        </span>
      </div>
    </div>
  </div>
  <div class="p-4 space-y-3">
    {
      teams.map((team) => (
        <div class="flex items-center space-x-3 p-2 rounded-lg hover:bg-gray-700/50">
          <img
            src={team.logo.src}
            alt={`${team.name} logo`}
            class="w-8 h-8 object-contain"
          />
          <div>
            <div class="text-white">{team.name}</div>
            <div class="text-sm text-gray-400">{team.city}</div>
          </div>
        </div>
      ))
    }
  </div>
</div>
