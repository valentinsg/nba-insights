---
import type { Team } from '../types/Team';

interface Props {
  conference: string;
  teams: Team[];
}

const { conference, teams } = Astro.props;
---

<div class="bg-gray-800 rounded-lg overflow-hidden mb-6">
  <div
    class="h-48 bg-cover bg-center relative"
    style={`background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), 
           url(${conference === 'Eastern' ? '/east-conference.jpg' : '/west-conference.jpg'})`}
  >
    <div class="absolute bottom-0 left-0 p-6">
      <h2 class="text-2xl font-bold text-white">
        {conference === "Eastern" ? "Conferencia Este" : "Conferencia Oeste"}
      </h2>
      <div class="mt-2 text-gray-300">
        <span class="mr-4">Equipos: {teams.length}</span>
        <span>
          Títulos: {teams.reduce((sum, team) => sum + team.titles, 0)}
        </span>
      </div>
    </div>
  </div>
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead>
        <tr class="bg-gray-900">
          <th class="px-4 py-3 text-left text-gray-400">Equipo</th>
          <th class="px-4 py-3 text-left text-gray-400">Ciudad</th>
          <th class="px-4 py-3 text-left text-gray-400">Títulos</th>
        </tr>
      </thead>
      <tbody>
        {
          teams.map((team) => (
            <tr class="border-b border-gray-700 hover:bg-gray-700/50">
              <td class="px-4 py-3">
                <div class="flex items-center space-x-3">
                  <img
                    src={team.logo.src}
                    alt={`${team.name} logo`}
                    class="w-8 h-8 object-contain"
                  />
                  <span class="text-white">{team.name}</span>
                </div>
              </td>
              <td class="px-4 py-3 text-gray-300">{team.city}</td>
              <td class="px-4 py-3 text-gray-300">{team.titles}</td>
            </tr>
          ))
        }
      </tbody>
    </table>
  </div>
</div>